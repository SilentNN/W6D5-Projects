<h1> Here be <%= @cat.name %> </h1>

<table>
    <thead>
        <tr>
            <th colspan="2"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <% @cat.attributes.each do |k, v| %>
            <% next if %w(id created_at updated_at).include?(k) %>
        <tr>
            <td><%= k %></td>
            <td><%= v %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<a href="<%= edit_cat_url(@cat) %>">Kill and unkill a cat!</a>